<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Employee Form View -->
    <record id="view_employee_form_inherit_employee_id" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.employee.id</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- ซ่อน Tags -->
            <xpath expr="//field[@name='category_ids']" position="replace"/>
            
            <!--Hide Coach-->
            <xpath expr="//field[@name='coach_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <!-- เพิ่ม Employee ID  -->
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="employee_id" required="True" placeholder="Employee ID"/>
            </xpath>

            <!-- ซ่อน Private Information tab -->
            <!--<xpath expr="//page[@name='personal_information']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
        </field>
    </record>

    <!-- Add to Employee Tree View -->
    <record id="view_employee_tree_inherit_employee_id" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.employee.id</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="employee_id" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Add to Employee Search View -->
    <record id="view_employee_filter_inherit_employee_id" model="ir.ui.view">
        <field name="name">hr.employee.search.inherit.employee.id</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="employee_id"/>
            </field>
        </field>
    </record>
</odoo>
