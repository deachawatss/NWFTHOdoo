<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_form_inherit_description_label" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit.description.label</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Description (If Compensatory, Please explain your work day)</attribute>
                <attribute name="placeholder">If Compensatory, Please explain your work day</attribute>
                <attribute name="widget">text</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
